<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GelinKayasi">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="50"
        android:text="Gelin Kayası"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="422dp"
        android:layout_height="227dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/gelin_kayasi" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="389dp"
        android:layout_height="396dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Bir rivayete göre; köyün birinden gelin alayı gelir ve eşkiyalar gelin alayının önünü keser. Eşkiyaların amacı ise, gelini kaçırıp esir pazarında satmaktı. Gelin alayının erkekleri eşkiyalarla dövüşür ve hayatlarını kaybederler. Eşkiyalar gelin ve damadı yakalamak üzereyken, gelin ve damat Allah’a dua ederler. ”Allah’ım bizi bu eşkiyaların eline düşürme, ya taş et ya kuş et” derler ve damat dışında her canlı taşa dönüşür.Yalnız damat kuş olup, gökyüzüne uçar. Gelin ağlarken gözünden düşen damlalar sel olur ve göz yaşlarının döküldüğü yerde kırmızı laleler açar. Zamanla bu laleler tüm tepeyi kaplamasıyla bilinir."
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>